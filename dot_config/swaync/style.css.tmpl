{{- $theme := index .catppuccin.macchiato -}}

* {
  all: unset;
  font-size: 14px;
  font-family: "Ubuntu Nerd Font";
  transition: 200ms;
}

trough highlight {
  background: {{ $theme.Text }};
}

scale {
  margin: 0 7px;
}

scale trough {
  margin: 0rem 1rem;
  min-height: 8px;
  min-width: 70px;
  border-radius: 12.6px;
}

trough slider {
  margin: -10px;
  border-radius: 12.6px;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.8);
  transition: all 0.2s ease;
  background-color: {{ $theme.Blue }};
}

trough slider:hover {
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.8), 0 0 8px {{ $theme.Blue }};
}

trough {
  background-color: {{ $theme.Surface0 }};
}

/* notifications */
.notification-background {
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.8), inset 0 0 0 1px {{ $theme.Surface1 }};
  border-radius: 12.6px;
  margin: 18px;
  background: {{ $theme.Mantle }};
  color: {{ $theme.Text }};
  padding: 0;
}

.notification-background .notification {
  padding: 7px;
  border-radius: 12.6px;
}

.notification-background .notification.critical {
  box-shadow: inset 0 0 7px 0 {{ $theme.Red }};
}

.notification .notification-content {
  margin: 7px;
}

.notification .notification-content overlay {
  /* icons */
  margin: 4px;
}

.notification-content .summary {
  color: {{ $theme.Text }};
}

.notification-content .time {
  color: {{ $theme.Subtext0 }};
}

.notification-content .body {
  color: {{ $theme.Subtext1 }};
}

.notification > *:last-child > * {
  min-height: 3.4em;
}

.notification-background .close-button {
  margin: 7px;
  padding: 2px;
  border-radius: 6.3px;
  color: {{ $theme.Base }};
  background-color: {{ $theme.Red }};
}

.notification-background .close-button:hover {
  background-color: {{ $theme.Maroon }};
}

.notification-background .close-button:active {
  background-color: {{ $theme.Pink }};
}

.notification .notification-action {
  border-radius: 7px;
  color: {{ $theme.Text }};
  box-shadow: inset 0 0 0 1px {{ $theme.Surface1 }};
  margin: 4px;
  padding: 8px;
  font-size: 0.2rem; /* controls the button size not text size*/
}

.notification .notification-action {
  background-color: {{ $theme.Surface0 }};
}

.notification .notification-action:hover {
  background-color: {{ $theme.Surface1 }};
}

.notification .notification-action:active {
  background-color: {{ $theme.Surface2 }};
}

.notification.critical progress {
  background-color: {{ $theme.Red }};
}

.notification.low progress,
.notification.normal progress {
  background-color: {{ $theme.Blue }};
}

.notification progress,
.notification trough,
.notification progressbar {
  border-radius: 12.6px;
  padding: 3px 0;
}

/* control center */
.control-center {
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.8), inset 0 0 0 1px {{ $theme.Surface0 }};
  border-radius: 12.6px;
  background-color: {{ $theme.Base }};
  color: {{ $theme.Text }};
  padding: 14px;
}

.control-center .notification-background {
  border-radius: 7px;
  box-shadow: inset 0 0 0 1px {{ $theme.Surface1 }};
  margin: 4px 10px;
}

.control-center .notification-background .notification {
  border-radius: 7px;
}

.control-center .notification-background .notification.low {
  opacity: 0.8;
}

.control-center .widget-title > label {
  color: {{ $theme.Text }};
  font-size: 1.3em;
}

.control-center .widget-title button {
  border-radius: 7px;
  color: {{ $theme.Text }};
  background-color: {{ $theme.Surface0 }};
  box-shadow: inset 0 0 0 1px {{ $theme.Surface1 }};
  padding: 8px;
}

.control-center .widget-title button:hover {
  background-color: {{ $theme.Surface1 }};
}

.control-center .widget-title button:active {
  background-color: {{ $theme.Surface2 }};
}

.control-center .notification-group {
  margin-top: 10px;
}

.control-center .notification-group:focus .notification-background {
  background-color: {{ $theme.Surface0 }};
}

scrollbar slider {
  margin: -3px;
  opacity: 0.8;
}

scrollbar trough {
  margin: 2px 0;
}

/* dnd */
.widget-dnd {
  margin-top: 5px;
  border-radius: 8px;
  font-size: 1.1rem;
}

.widget-dnd > switch {
  font-size: initial;
  border-radius: 8px;
  background: {{ $theme.Surface0 }};
  box-shadow: none;
}

.widget-dnd > switch:checked {
  background: {{ $theme.Blue }};
}

.widget-dnd > switch slider {
  background: {{ $theme.Surface1 }};
  border-radius: 8px;
}

/* mpris */
.widget-mpris-player {
  background: {{ $theme.Surface0 }};
  border-radius: 12.6px;
  color: {{ $theme.Text }};
}

.mpris-overlay {
  background-color: {{ $theme.Surface0 }};
  opacity: 0.9;
  padding: 15px 10px;
}

.widget-mpris-album-art {
  -gtk-icon-size: 100px;
  border-radius: 12.6px;
  margin: 0 10px;
}

.widget-mpris-title {
  font-size: 1.2rem;
  color: {{ $theme.Text }};
}

.widget-mpris-subtitle {
  font-size: 1rem;
  color: {{ $theme.Subtext1 }};
}

.widget-mpris button {
  border-radius: 12.6px;
  color: {{ $theme.Text }};
  margin: 0 5px;
  padding: 2px;
}

.widget-mpris button image {
  -gtk-icon-size: 1.8rem;
}

.widget-mpris button:hover {
  background-color: {{ $theme.Surface0 }};
}

.widget-mpris button:active {
  background-color: {{ $theme.Surface1 }};
}

.widget-mpris button:disabled {
  opacity: 0.5;
}

.widget-menubar > box > .menu-button-bar > button > label {
  font-size: 3rem;
  padding: 0.5rem 2rem;
}

.widget-menubar > box > .menu-button-bar > :last-child {
  color: {{ $theme.Red }};
}

.power-buttons button:hover,
.powermode-buttons button:hover,
.screenshot-buttons button:hover {
  background: {{ $theme.Surface0 }};
}

.control-center .widget-label > label {
  color: {{ $theme.Text }};
  font-size: 2rem;
}

.widget-buttons-grid {
  padding-top: 1rem;
}

.widget-buttons-grid > flowbox > flowboxchild > button label {
  font-size: 2.5rem;
}

.widget-volume {
  padding: 1rem 0;
}

.widget-volume label {
  color: {{ $theme.Sapphire }};
  padding: 0 1rem;
}

.widget-volume trough highlight {
  background: {{ $theme.Sapphire }};
}

.widget-backlight trough highlight {
  background: {{ $theme.Yellow }};
}

.widget-backlight label {
  font-size: 1.5rem;
  color: {{ $theme.Yellow }};
}

.widget-backlight .KB {
  padding-bottom: 1rem;
}

.image {
  padding-right: 0.5rem;
}
